.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.warning {
  background-color: #fef0f0;
  color: #f56c6c;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.form {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  color: #606266;
  font-size: 28rpx;
}

.picker {
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.placeholder {
  color: #909399;
}

.markdown-editor {
  position: relative;
}

.markdown-input {
  width: 100%;
  height: 300rpx;
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 4rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.preview-toggle {
  position: absolute;
  right: 20rpx;
  top: -60rpx;
  color: #409EFF;
  font-size: 24rpx;
}

.markdown-preview {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f7fa;
  border-radius: 4rpx;
  font-size: 28rpx;
}

input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f5f7fa;
  border-radius: 4rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-actions {
  margin-top: 40rpx;
}

button[type="primary"] {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

button[type="primary"][disabled] {
  background-color: #a0cfff;
  color: #fff;
} 