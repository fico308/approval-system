.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  position: relative;
  display: inline-block;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.timeline {
  padding: 10rpx;
}

.month-group {
  margin-bottom: 50rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.month-header {
  margin-bottom: 30rpx;
  padding-left: 24rpx;
  border-left: 6rpx solid #1890ff;
}

.month-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1890ff;
  display: flex;
  align-items: center;
}

.month-title::before {
  content: 'üìÖ';
  margin-right: 12rpx;
  font-size: 32rpx;
}

.month-plans {
  padding-left: 24rpx;
}

.plan-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
  transition: all 0.3s ease;
}

.plan-card::before {
  content: '';
  position: absolute;
  left: -24rpx;
  top: 30rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #1890ff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.2);
}

.plan-card:active {
  transform: scale(0.98);
}

.plan-header {
  margin-bottom: 20rpx;
}

.plan-date {
  font-size: 30rpx;
  color: #1890ff;
  font-weight: 500;
}

.plan-description {
  font-size: 30rpx;
  color: #2c3e50;
  line-height: 1.6;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.plan-alternative {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 20rpx;
  background: #f0f7ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.alternative-label {
  color: #1890ff;
  font-weight: 500;
  margin-right: 12rpx;
}

.alternative-content {
  color: #2c3e50;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #909399;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty::before {
  content: 'üìù';
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #909399;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 