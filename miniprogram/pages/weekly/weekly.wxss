.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  position: relative;
  display: inline-block;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.plan-list {
  padding: 0 10rpx;
}

.plan-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.plan-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: #1890ff;
  border-radius: 4rpx 0 0 4rpx;
}

.plan-card:active {
  transform: scale(0.98);
}

.plan-header {
  margin-bottom: 24rpx;
}

.plan-date {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.plan-date::before {
  content: 'üìÖ';
  margin-right: 12rpx;
  font-size: 28rpx;
}

.plan-submit-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.plan-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.plan-status.approved {
  background: #f6ffed;
  color: #52c41a;
}

.plan-description {
  font-size: 30rpx;
  color: #2c3e50;
  line-height: 1.6;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.plan-alternative {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 20rpx;
  background: #f0f7ff;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

.alternative-label {
  color: #1890ff;
  font-weight: 500;
  margin-right: 12rpx;
}

.alternative-content {
  color: #2c3e50;
}

.plan-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.feedback-label {
  font-size: 24rpx;
  color: #999;
}

.feedback-content {
  font-size: 28rpx;
  color: #666;
  margin-left: 8rpx;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #909399;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty::before {
  content: 'üìù';
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #909399;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading::before {
  content: '';
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 