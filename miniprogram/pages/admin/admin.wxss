.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section {
  margin-bottom: 40rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.plan-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.date-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.date {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.weekday {
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.status {
  font-size: 28rpx;
  padding: 8rpx 24rpx;
  border-radius: 28rpx;
  font-weight: 500;
}

.status.pending {
  background: #e6f7ff;
  color: #1890ff;
}

.status.approved {
  background: #f6ffed;
  color: #52c41a;
}

.status.rejected {
  background: #fff2f0;
  color: #ff4d4f;
}

.plan-content {
  margin: 30rpx 0;
}

.content-item {
  margin-bottom: 30rpx;
}

.content-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.text {
  display: block;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  background: #f8f8f8;
  padding: 24rpx;
  border-radius: 16rpx;
}

.feedback-input {
  width: 100%;
  height: 180rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.plan-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.footer-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.submit-time {
  font-size: 24rpx;
  color: #666;
}

.action-group {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.reject-btn, .approve-btn {
  margin: 0;
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height: 2.2;
  min-width: 120rpx;
  height: 64rpx;
  border-radius: 32rpx;
}

.reject-btn {
  background: #f5f5f5;
  color: #666;
}

.approve-btn {
  background: #07c160;
  color: #fff;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 30rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 30rpx;
}

.login-tip {
  text-align: center;
  padding: 120rpx 0;
}

.login-btn {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1890ff;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: none;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #1890ff;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

/* 登录对话框样式 */
.login-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.dialog-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
}

.dialog-body {
  padding: 30rpx;
}

.dialog-body input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.dialog-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.dialog-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  border-radius: 0;
}

.dialog-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.dialog-btn.confirm {
  background: #1890ff;
  color: #fff;
} 